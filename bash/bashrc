# /etc/skel/.bashrc
if [[ $- != *i* ]] ; then
    return
fi

# Folder for all the bash settings and functions
bash_settings=$HOME/Dropbox/Dotfiles/bash

source ${bash_settings}/alias.sh
source ${bash_settings}/functions.sh
source ${bash_settings}/tmux_functions.sh
source ${bash_settings}/fzf_functions.sh
source ${bash_settings}/apps.sh

#git_prompt=/usr/local/opt/git/etc/bash_completion.d/git-prompt.sh
# if [ -e ${git_prompt} ]; then
#     source ${git_prompt}
# fi
git_completion=/usr/local/opt/git/etc/bash_completion.d/git-completion.bash
if [ -e ${git_completion} ]; then
    source ${git_completion}
fi

# colouring MacOs
export COLORTERM=truecolor
export GREP_OPTIONS='--color=auto'

# general settings
export EDITOR=vim

# bind TAB:menu-complete
bind '"\er": redraw-current-line'
bind '"\C-g\C-f": "$(gf)\e\C-e\er"'
bind '"\C-g\C-b": "$(gb)\e\C-e\er"'
bind '"\C-g\C-t": "$(gt)\e\C-e\er"'
bind '"\C-g\C-h": "$(gh)\e\C-e\er"'
bind '"\C-g\C-r": "$(gr)\e\C-e\er"'

#paths to directory's
export PATH="$GOPATH/bin:$PATH"
export QE="/Users/lazy/Dropbox/Dotfiles/"
export QE="/Users/lazy/Dropbox/Workbench/Projects/ESPRESSO/"
export CODE="/Users/lazy/Dropbox/Workbench/Code/"
export GOPATH="/Users/lazy/go"
