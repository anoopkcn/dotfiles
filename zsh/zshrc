# PATH
setopt extended_glob null_glob
path=(
    $path
    $HOME/.local/bin
    /Library/TeX/texbin
)
typeset -U path
path=($^path(N-/))
export PATH

# PROMPT
precmd(){
    print ""
    print -P "%F{cyan}%~%f"
}
PROMPT='%(?.%F{green}❯%f.%F{red}❯%f) '

# INPUTRC
bindkey '\e[A' history-search-backward
bindkey '\e[B' history-search-forward
bindkey '^y' autosuggest-accept
# bindkey -v 

# FUNCTIONS
source_file() {  [ -f "$1" ] && source "$1"  }
path() { echo -e ${PATH//:/\\n} }

# SOURCE
source_file $HOME/.config/zsh/plugins.sh
source_file $HOME/.privaterc

# HISTORY OPTIONS
HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=$HISTSIZE
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY

# ALIAS
# requires: nvim, rsync, git
alias ls="ls --color=auto"
alias vim='nvim'
alias duh="du -h -d 0 [^.]*"
alias sync="rsync \
  --archive \
  --itemize-changes \
  --recursive \
  --compress \
  --verbose \
  --checksum \
  --exclude-from=${HOME}/.config/zsh/rsyncignore \
  --prune-empty-dirs"
alias tree="eza --color=always --tree"
