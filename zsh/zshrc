setopt extended_glob null_glob
path=(
    /Users/akc/.local/bin
    /Library/TeX/texbin
    /Users/akc/develop/zenv/zig-out/bin
    $path
)
typeset -U path
path=($^path(N-/))
export PATH
export VIRTUAL_ENV_DISABLE_PROMPT=1
export CONDA_CHANGEPS1=no
export EDITOR='nvim'

# INPUTRC
# bindkey '\e[A' history-search-backward
# bindkey '\e[B' history-search-forward
bindkey "^[[A" history-beginning-search-backward
bindkey "^[[B" history-beginning-search-forward
bindkey '^y' autosuggest-accept
# bindkey -v

# FUNCTIONS
source_file() {  [ -f "$1" ] && source "$1"  }
path() { echo -e ${PATH//:/\\n} }

# SOURCE
source_file $HOME/.config/zsh/plugins.sh
source_file $HOME/.privaterc
source_file $HOME/.config/zsh/minimal-prompt.sh
# export TM_SEARCH_DIRS="$HOME $HOME/work $HOME/develop $HOME/Dropbox $HOME/Dropbox/projects"
# source_file $HOME/.config/tmux/tools.sh

# HISTORY OPTIONS
HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=$HISTSIZE
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY

# ALIAS
# requires: nvim, rsync, git
alias ls="ls --color=auto"
alias vim='nvim'
alias duh="du -h -d 0 [^.]*"
alias sync="rsync -macviz --exclude-from=${HOME}/.config/zsh/rsyncignore"
alias tkill="tmux kill-server"
alias tmi="tm -i"
alias imgcat="viu" # show images in terminal
alias fcat="fancy-cat" # show pdf in terminal
