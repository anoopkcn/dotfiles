setopt extended_glob null_glob
path=(
    /Users/akc/.local/bin
    /Library/TeX/texbin
    /Users/akc/develop/zenv/zig-out/bin
    $path
)
typeset -U path
path=($^path(N-/))
export PATH

# PROMPT
autoload -Uz vcs_info
setopt prompt_subst

# Configure vcs_info for git
zstyle ':vcs_info:git:*' formats '%F{blue}(%b)%f%F{yellow}%u%f%F{green}%c%f'
zstyle ':vcs_info:git:*' actionformats '%F{blue}(%b|%a)%f%F{yellow}%u%f%F{green}%c%f'
zstyle ':vcs_info:*' check-for-changes true
zstyle ':vcs_info:*' unstagedstr ' 󱐌' # 󱐌 ●
zstyle ':vcs_info:*' stagedstr ' ✚'

precmd(){
    vcs_info
    print ""
    print -P "%F{cyan}%~%f git:${vcs_info_msg_0_}"
}
PROMPT='%(?.%F{green}%f.%F{red}%f) '

# INPUTRC
bindkey '\e[A' history-search-backward
bindkey '\e[B' history-search-forward
bindkey '^y' autosuggest-accept
# bindkey -v

# FUNCTIONS
source_file() {  [ -f "$1" ] && source "$1"  }
path() { echo -e ${PATH//:/\\n} }

# SOURCE
source_file $HOME/.config/zsh/plugins.sh
source_file $HOME/.privaterc
# export TM_SEARCH_DIRS="$HOME $HOME/work $HOME/develop $HOME/Dropbox $HOME/Dropbox/projects"
# source_file $HOME/.config/tmux/tools.sh

# HISTORY OPTIONS
HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=$HISTSIZE
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY

# ALIAS
# requires: nvim, rsync, git
alias ls="ls --color=auto"
alias vim='nvim'
alias duh="du -h -d 0 [^.]*"
alias sync="rsync -macviz --exclude-from=${HOME}/.config/zsh/rsyncignore"
alias tree="eza --color=always --tree"
alias tkill="tmux kill-server"
alias tmi="tm -i"
alias icat="chafa -f kitty"
alias imgcat="chafa -f kitty"
alias fcat="fancy-cat"
alias zenvx="zenv run ."
# git aliases
alias ga="git add"
alias gs="git status --short"
alias gco="git checkout"
alias gcm="git commit -m"
alias gb="git branch --show-current"

