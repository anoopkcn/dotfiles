{
  "vim_mode": true,
  // "relative_line_numbers": true,
  "cursor_blink": false,
  "format_on_save": "off",
  "buffer_font_fallbacks": ["ZedMono Nerd Font"],
  // "tab_bar": {
  //   "show": false
  // },
  "terminal": {
    "font_fallbacks": ["ZedMono Nerd Font"]
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "project_panel": {
    "scrollbar": {
      "show": "never"
    }
  },
  "journal": {
    "path": "~/Dropbox",
    "hour_format": "hour24"
  },
  "file_finder": {
      "modal_width": "large"
  }
}
