{
  "vim_mode": true,
  "buffer_font_family": "TX-02",
  "buffer_font_size": 14,
  "buffer_font_fallbacks": ["Zed Mono"],
  "cursor_blink": false,
  "format_on_save": "off",
  "terminal": {
    "font_family": "TX-02",
    "font_size": 14,
    "font_fallbacks": ["Zed Mono"]
  },
  "project_panel": {
    "scrollbar": {
      "show": "never"
    }
  },
  "journal": {
    "path": "~/Dropbox",
    "hour_format": "hour24"
  }
}
