{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  // "relative_line_numbers": true,
  "buffer_font_family": "TX-02",
  "buffer_font_size": 15,
  "buffer_font_fallbacks": ["ZedMono Nerd Font"],
  "cursor_blink": false,
  "format_on_save": "off",
  "terminal": {
    "font_family": "TX-02",
    "font_size": 15,
    "font_fallbacks": ["ZedMono Nerd Font"]
  },
  "project_panel": {
    "scrollbar": {
      "show": "never"
    }
  },
  "journal": {
    "path": "~/Dropbox",
    "hour_format": "hour24"
  }
}
