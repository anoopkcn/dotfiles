[core]
	editor = nvim
	excludesfile = ~/dotfiles/git/ggitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[difftool]
	prompt = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
	keepBackup = false
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	tool = vimdiff
